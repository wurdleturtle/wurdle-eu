---
export interface Props {
  title: string
  pubDate: Date
  author: string
  tags?: string[]
}
const { title, pubDate, author, tags } = Astro.props
---

<meta charset="UTF-8" />
<article class="blog-post">
  <header class="post-header">
    <h1 class="name gradient">{title}</h1>
    <div class="post-meta desc">
      <time datetime={pubDate.toISOString()}>
        {
          pubDate.toLocaleDateString('nl-BE', {
            year: 'numeric',
            month: 'numeric',
            day: 'numeric',
          })
        }
      </time>
      <span class="author">by {author}</span>
    </div>
    {
      tags && tags.length > 0 && (
        <div class="tags">
          {tags.map((tag) => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )
    }
  </header>
  <div class="post-content">
    <slot />
  </div>
  <footer class="post-footer reachout">
    <a href="/blog">Back to all posts</a>
  </footer>
</article>

<style>
  @font-face {
    font-family: jb;
    src: url(https://new.nyabyte.dev/JetBrains.ttf);
  }

  * {
    font-family: jb;
  }

  body {
    background-color: #111;
    color: #fff;
  }

  .name {
    font-family: jb;
    font-size: 3rem;
    text-align: center;
    margin: 0 auto;
  }

  .desc {
    text-align: center;
    display: flex;
    justify-content: center;
  }

  .gradient {
    background: linear-gradient(75deg, #005eff, rgb(30, 255, 0));
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: bold;
    display: block;
  }

  .warning {
    text-align: center;
    margin: 0 auto;
    width: 100vw;
  }

  .reachout {
    text-align: center;
  }

  .sociallinks {
    margin: 0 auto;
    display: block;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    gap: 0;
  }

  .sociallinks p {
    margin: 0;
    padding: 0;
  }

  .blog-post {
    max-width: 100ch;
    margin: 0 auto;
    padding: 2rem 1rem;
    background-color: #111;
    color: #fff;
  }

  .post-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #333;
  }

  .post-meta {
    display: flex;
    gap: 1rem;
    margin: 1rem 0;
    font-size: 0.9rem;
    color: #ccc;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 1rem;
    justify-content: center;
  }

  .tag {
    background: #333;
    color: #fff;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
  }

  .featured-image {
    width: 100%;
    height: auto;
    margin-top: 1rem;
    border-radius: 8px;
  }

  .post-content {
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .post-content :global(h2) {
    margin: 2rem 0 1rem;
    font-size: 1.8rem;
    color: #e6e6e6;
  }

  .post-content :global(pre) {
    background-color: #1a1a1a;
    border-radius: 8px;
    padding: 0.75rem;
    margin: 0.75rem 0;
    overflow-x: auto;
    border: 1px solid #333;
  }

  .post-content :global(pre code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1rem;
    line-height: 1.5;
    display: block;
    width: 100%;
  }

  .post-content :global(p code) {
    background-color: #1a1a1a;
    padding: 0.1em 0.2em;
    border-radius: 4px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 1em;
    color: #e6e6e6;
  }

  .post-footer {
    padding-top: 1rem;
    border-top: 1px solid #333;
  }

  .post-footer a {
    color: #005eff;
    text-decoration: none;
  }

  .post-footer a:hover {
    text-decoration: underline;
  }
</style>
